<div class="homeWrapper w-75 mx-auto">
    <div class="headers">
        <div class="logoWrapper border-bottom border-dark">
            <div class="logo ">
                <img src="/images/j2_logo.png" alt="j2_logo">
            </div>
        </div>

        <div class="navbars d-none d-md-block">
            <div class="menu">
                <a class="active" href="/"> Home</a>
                <a href="/investment"> Investment</a>
                <a href="/about"> About</a>
                <a href="/contact"> Contact</a>
            </div>

        </div>

        <!-- mobile -->
        <div class="overlay d-md-none" id="myNav">
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
            <div class="overlay-content">
                <a class="active" href="/"> Home</a>
                <a href="/investment"> Investment</a>
                <a href="/about"> About</a>
                <a href="/contact"> Contact</a>
            </div>
        </div>

        <span class="hamburger d-md-none" style="font-size:40px;cursor:pointer;" onclick="openNav()">&#9776;</span>

        <div class="hero_section">
            <div class="hero_wrap">
                <div class="big_H">
                    <p>EARTH PLANET MINERALS</p>
                </div>
                <div class="small_Hc">
                    <p>Contact Us</p>
                </div>

            </div>

        </div>





        <div class="forms">
            <div class="container about_cont">
                <h1>WE WANT TO HEAR FROM YOU</h1>
                <div class="row gx-5">
                    <div class="col-12 col-md-6 address p-5">
                        <div class="row">
                            <div class="col-12 col-md-5">
                              
                                <p>info@earthplanetminerals.com</p>
                            </div>
                            <div class="col-12 col-md-7 d-none d-md-block">
                                <img src="/images/eathplanet.png" alt="" width="250px" height="auto">
                            </div>
                        </div>

                    </div>

                    <div class="col-12 col-md-6">
                        <form action="/submitMessage" method="POST" class="row g-3">

                            <% if (typeof msg !=='undefined' ) { %>
                                <% if (msg == ''){ %>
                                    <div class="alert alert-danger animate__animated animate__shakeX text-center fs-5 d-none"
                                        role="alert"></div>
                                    <% } else { %>
                                        <div class="alert alert-danger animate__animated animate__shakeX text-center fs-5"
                                            role="alert">
                                            <%= msg %>
                                        </div>
                                        <% } %>
                            <% } else if (typeof error !== 'undefined') { %>
                                    <% if (error == ''){ %>
                                        <div class="alert alert-danger animate__animated animate__shakeX text-center fs-5 d-none"
                                            role="alert"></div>
    
                                        <%} else { %>
                                                    <div class="alert alert-danger animate__animated animate__shakeX text-center fs-5"
                                                    role="alert">
                                                    <%= error %>
                                                </div>
                                                <% } %>
                                                <% } %>
                            <div class="col-12">
                                <input type="text" class="form-control" id="inputEmail4" placeholder="Name" name="name" required>
                            </div>
                            <div class="col-12">
                                <input type="text" class="form-control" id="inputAddress" placeholder="Address" name="address" required>
                            </div>
                            <div class="col-md-6">
                                <input type="email" class="form-control" id="inputAddress2" placeholder="Email" name="email" required>
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control" id="inputCity" placeholder="Phone" name="phone" required>
                            </div>
    
                            <div class="col-12">
                                <input type="text" class="form-control" id="inputZip" placeholder="Subject" name="subject" required>
                            </div>
                            <div class="col-md-12">
                                <textarea class="form-control" id="comment" name="comment"
                                    rows="3" required>Type your message here ...</textarea>
                            </div>
                            <div class="col-12 d-flex justify-content-end">
                                <button type="submit" class="btn home_btn">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>

                
            </div>
        </div>
    </div>


